---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<script load:client>
			console.log(
				"%c üëã Hi there, you can find the source code of my website at https://github.com/lj-n/www üç≠",
				"font-weight: bold; font-size: 24px; padding: 10px 6px"
			);
		</script>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark light;
		--bg-color: #0a0a0a;
		--bg-info-card: #121212;
	}
	@media (prefers-color-scheme: light) {
		:root {
			--bg-color: #fff7f4;
			--bg-info-card: #fffaf9;
		}
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		min-height: 100vh;
		overflow-y: scroll;
		overscroll-behavior: none;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 10rem;
		background: var(--bg-color);
	}
	#info-card {
		padding: 4rem;
	}
	pre {
		font-size: 20px;
		padding: 2rem 3rem;
		border-radius: 0.5rem;
		line-height: 1.3;
		background-color: var(--bg-info-card) !important;
		box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
	}
</style>
