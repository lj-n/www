---
import Layout from "../layouts/Layout.astro";
import Blob from "../components/Blob";
import HeroCard from "../components/HeroCard";
---

<Layout title="linus the dev">
  <HeroCard client:load/>
  <div class="container">
    <Blob client:load />
  </div>
</Layout>

<style>
  div.container {
    /* border: 2px dotted #262729; */
    max-width: 500px;
    width: 100%;
    height: 500px;
    margin: auto;
  }
  canvas {
    width: 100%;
    height: 100%;
    touch-action: none;
  }
  h1 {
    margin: auto;
  }
  h1 span {
    color: tomato;
  }
</style>
